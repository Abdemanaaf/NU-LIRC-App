<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1D6D0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AboutActivity"
    tools:showIn="@layout/app_bar_about">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/intro"
            style="@style/toggle_button"
            android:layout_marginTop="4dp"
            android:textOff="@string/intro"
            android:textOn="@string/intro" />

        <TextView
            android:id="@+id/introText"
            style="@style/toggle_text_views" />

        <ToggleButton
            android:id="@+id/visionMission"
            style="@style/toggle_button"
            android:layout_marginTop="16dp"
            android:textOff="@string/vision_mission"
            android:textOn="@string/vision_mission" />

        <TextView
            android:id="@+id/visionMissionText"
            style="@style/toggle_text_views" />

        <ToggleButton
            android:id="@+id/userFacilities"
            style="@style/toggle_button"
            android:layout_marginTop="16dp"
            android:textOff="@string/user_facilities"
            android:textOn="@string/user_facilities" />

        <TextView
            android:id="@+id/userFacilitiesText"
            style="@style/toggle_text_views" />

        <ToggleButton
            android:id="@+id/nuAtGlance"
            style="@style/toggle_button"
            android:layout_marginTop="16dp"
            android:textOff="@string/nu_at_glance"
            android:textOn="@string/nu_at_glance" />

        <TextView
            android:id="@+id/nuAtGlanceText"
            style="@style/toggle_text_views" />

        <ToggleButton
            android:id="@+id/advisory"
            style="@style/toggle_button"
            android:layout_marginTop="16dp"
            android:textOff="@string/advisory"
            android:textOn="@string/advisory" />

        <TextView
            android:id="@+id/advisoryText"
            style="@style/toggle_text_views" />

        <ToggleButton
            android:id="@+id/collection"
            style="@style/toggle_button"
            android:layout_marginTop="16dp"
            android:textOff="@string/collection"
            android:textOn="@string/collection" />

        <TextView
            android:id="@+id/collectionText"
            style="@style/toggle_text_views" />

        <ToggleButton
            android:id="@+id/generalRules"
            style="@style/toggle_button"
            android:layout_marginTop="16dp"
            android:textOff="@string/general_rules"
            android:textOn="@string/general_rules" />

        <TextView
            android:id="@+id/generalRulesText"
            style="@style/toggle_text_views"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>