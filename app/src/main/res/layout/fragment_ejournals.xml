<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EJournals">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/academicJournals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/academic_journals"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/aircc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/aircc"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/nopr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/nopr"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/journalsSeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/journals_seek"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ncert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/ncert"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/eJournalLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/e_journals"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/onlineJournals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/online_journals"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/ias"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/worldSci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/world_sci"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/southAsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/south_asia"
            android:textSize="24sp" />

    </LinearLayout>

</ScrollView>